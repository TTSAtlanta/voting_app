
<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h1>Cast your vote, <%= User.find(current_user.id).name %> </h1>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th colspan="2  "></th>
          <th style="text-align: center;">Your current vote</th>
        </tr>
      </thead>

      <tbody>
        <% @candidates.each do |candidate| %>
          <tr>
            <td><%= candidate.name %></td>
            <td></td>
            <td><%= link_to 'I vote for this', process_vote_path(id: candidate.id), class: "btn btn-primary" %></td>
            <% if current_user.candidate_id == candidate.id %>
              <td style="text-align: center;"><span class="glyphicon glyphicon-ok"></span></td>
            <% else %>
              <td></td>
            <% end %>
            
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
  <div class="col-md-1"></div>
</div>
